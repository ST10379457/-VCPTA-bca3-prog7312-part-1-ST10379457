<Window x:Class="ST10379457_PROG7312_POE.ReportIssuesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10379457_PROG7312_POE"
        mc:Ignorable="d"
        Title="Report Issues" Height="800" Width="800"
        Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <ProgressBar x:Name="pbFormComplete" Minimum="0" Maximum="100" Value="0"
                         Height="16" Margin="0,718,0,0"
                         HorizontalAlignment="Center" Width="736"
                         Foreground="#4CAF50" Background="#F5F5F5"/>
            
            <Label x:Name="lblLocation" Content="Location of the reported issue:" 
                   HorizontalAlignment="Left" Margin="32,52,0,0" VerticalAlignment="Top"
                   Foreground="#212121" FontWeight="Bold"/>
            <TextBox x:Name="txtLocation" HorizontalAlignment="Left" Margin="32,84,32,0"
                     TextWrapping="Wrap" VerticalAlignment="Top" Width="396" Height="26"
                     Background="#BBDEFB" Foreground="#212121" BorderBrush="#0D47A1" BorderThickness="1"/>

            <Label x:Name="lblCategory" Content="Select the category of the reported issue:" 
                   HorizontalAlignment="Left" Margin="32,130,0,0" VerticalAlignment="Top"
                   Foreground="#212121" FontWeight="Bold"/>
            <ComboBox x:Name="cmbCategory" HorizontalAlignment="Left" Margin="32,167,32,0" 
                      VerticalAlignment="Top" Width="396" Background="#BBDEFB" Foreground="#212121"
                      BorderBrush="#0D47A1" BorderThickness="1">
                <ComboBoxItem Content="Road Damage"/>
                <ComboBoxItem Content="Water Leak"/>
                <ComboBoxItem Content="Electricity"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <Label x:Name="lblDescription" Content="Write a detailed description of the issue:" 
                   HorizontalAlignment="Left" Margin="32,217,0,0" VerticalAlignment="Top"
                   Foreground="#212121" FontWeight="Bold"/>
            <RichTextBox x:Name="rtbDescription"
             Margin="32,255,32,392"
             Background="#BBDEFB"
             Foreground="#212121"
             BorderBrush="#0D47A1"
             BorderThickness="1"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Auto">
                <FlowDocument PageWidth="600">
                </FlowDocument>
            </RichTextBox>

            <Label x:Name="txtMediaAttachment" Content="Media Attachment:" HorizontalAlignment="Left"
                   Margin="32,428,0,0" VerticalAlignment="Top" Foreground="#212121" FontWeight="Bold"/>
            <Button x:Name="btnAttachFile" Content="Attach File" Width="120" Height="30" 
                    Margin="32,459,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Background="#0D47A1" Foreground="White" Click="btnAttachFile_Click"/>
            <TextBlock x:Name="txtFilePath" Text="No file selected" Margin="163,466,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top" Width="550" TextWrapping="Wrap"
                       Foreground="#212121"/>

            <Button x:Name="btnBack" Content="Back to Home page" HorizontalAlignment="Left" Height="28"
                    Margin="10,10,0,0" VerticalAlignment="Top" Width="142"
                    Background="#0D47A1" Foreground="White" Click="btnBack_Click"/>
            <Button x:Name="btnSubmit" Content="Submit report" HorizontalAlignment="Left" Margin="32,601,0,0"
                    VerticalAlignment="Top" Height="30" Width="120"
                    Background="#4CAF50" Foreground="White" Click="btnSubmit_Click"/>

            <Label x:Name="lblProgress" Content="0% complete: You can do this!" HorizontalAlignment="Left"
                   Margin="598,687,0,0" VerticalAlignment="Top" Width="170" Foreground="#212121"/>
        </Grid>
    </ScrollViewer>
</Window>
