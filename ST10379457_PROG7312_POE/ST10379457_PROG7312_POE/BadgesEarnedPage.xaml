<Window x:Class="ST10379457_PROG7312_POE.BadgesEarnedPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10379457_PROG7312_POE"
        mc:Ignorable="d"
        Title="Badges Earned" Height="450" Width="800"
        Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Button x:Name="btnBack" Content="Back to Home page" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="142"
                    Background="#0D47A1" Foreground="White" Click="btnBack_Click"/>

            <TextBlock x:Name="txtFirstBadge" HorizontalAlignment="Left" Margin="80,259,0,0"
                       TextWrapping="Wrap" Text="Create your first report" VerticalAlignment="Top"
                       Foreground="#212121" FontWeight="Bold"/>
            <TextBlock x:Name="txtTenBadge" HorizontalAlignment="Left" Margin="270,259,0,0"
                       TextWrapping="Wrap" Text="Create 10 reports" VerticalAlignment="Top"
                       Foreground="#212121" FontWeight="Bold"/>
            <TextBlock x:Name="txtFiftyBadge" HorizontalAlignment="Left" Margin="450,259,0,0"
                       TextWrapping="Wrap" Text="Create 50 reports" VerticalAlignment="Top"
                       Foreground="#212121" FontWeight="Bold"/>
            <TextBlock x:Name="txtHundredBadge" HorizontalAlignment="Left" Margin="610,259,0,0"
                       TextWrapping="Wrap" Text="Create 100 reports" VerticalAlignment="Top"
                       Foreground="#212121" FontWeight="Bold"/>

            <Image x:Name="imgFirstBadge" Visibility="Hidden" Source="pack://application:,,,/CheckBadge.png"
                   HorizontalAlignment="Left" Height="100" Margin="80,118,0,0" VerticalAlignment="Top" Width="100"/>
            <Image x:Name="imgTenBadge" Visibility="Hidden" Source="pack://application:,,,/CheckBadge.png"
                   HorizontalAlignment="Left" Height="100" Margin="266,118,0,0" VerticalAlignment="Top" Width="100"/>
            <Image x:Name="imgFiftyBadge" Visibility="Hidden" Source="pack://application:,,,/CheckBadge.png"
                   HorizontalAlignment="Left" Height="100" Margin="446,117,0,0" VerticalAlignment="Top" Width="100"/>
            <Image x:Name="imgHundredBadge" Visibility="Hidden" Source="pack://application:,,,/CheckBadge.png"
                   HorizontalAlignment="Left" Height="100" Margin="609,117,0,0" VerticalAlignment="Top" Width="100"/>
        </Grid>
    </ScrollViewer>
</Window>
