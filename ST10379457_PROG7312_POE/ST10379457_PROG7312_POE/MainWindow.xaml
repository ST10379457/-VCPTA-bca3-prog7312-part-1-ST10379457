<Window x:Class="ST10379457_PROG7312_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10379457_PROG7312_POE"
        mc:Ignorable="d"
        Title="Home Page" Height="450" Width="800"
        Background="White">
    <Grid>
        <Label Content="Welcome to the South African Municipal Report System" 
               FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,36,0,0"
               VerticalAlignment="Top" Foreground="#0D47A1"/>

        <Button Content="Report Issues" x:Name="btnReportIssues" HorizontalAlignment="Center"
                Margin="0,110,0,0" VerticalAlignment="Top" Height="45" Width="252"
                Background="#0D47A1" Foreground="White" Click="btnReportIssues_Click"/>

        <Button Content="Local Events and Announcements" x:Name="btnAnnouncements" HorizontalAlignment="Center"
                VerticalAlignment="Center" Height="45" Width="252"
                Background="#0D47A1" Foreground="White" Click="btnAnnouncements_Click"/>

        <Button Content="Service Request Status" x:Name="btnRequestStatus" HorizontalAlignment="Center"
                Margin="0,260,0,0" VerticalAlignment="Top" Height="45" Width="252"
                Background="#0D47A1" Foreground="White" Click="btnRequestStatus_Click"/>

        <Button Content="Badges Earned" x:Name="btnBadges" HorizontalAlignment="Center"
                Margin="0,335,0,0" VerticalAlignment="Top" Height="45" Width="252"
                Background="#0D47A1" Foreground="White" Click="btnBadges_Click"/>
    </Grid>
</Window>
